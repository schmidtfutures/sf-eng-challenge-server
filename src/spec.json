{
  "openapi": "3.0.0",
  "info": {
    "title": "Schmidt Futures Frontend Engineering Challenge",
    "description": "Documentation for Frontend Engineering Challenge Server"
  },
  "paths": {
    "/health": {
      "get": {
        "description": "Gets health status",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "healthy": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/matches": {
      "get": {
        "description": "Returns matches with an optional filter by user id",
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "required": false,
            "description": "Providing a user id returns matches for a specific user"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["users"],
                  "properties": {
                    "users": {
                      "$id": "#root/users",
                      "title": "Users",
                      "type": "object",
                      "required": [
                        "user_id",
                        "first_name",
                        "last_name",
                        "email",
                        "user_image",
                        "interested_in",
                        "matches"
                      ],
                      "properties": {
                        "user_id": {
                          "$id": "#root/users/user_id",
                          "title": "User_id",
                          "type": "integer",
                          "examples": [1],
                          "default": 0
                        },
                        "first_name": {
                          "$id": "#root/users/first_name",
                          "title": "First_name",
                          "type": "string",
                          "default": "",
                          "examples": ["Alf"],
                          "pattern": "^.*$"
                        },
                        "last_name": {
                          "$id": "#root/users/last_name",
                          "title": "Last_name",
                          "type": "string",
                          "default": "",
                          "examples": ["Paunsford"],
                          "pattern": "^.*$"
                        },
                        "email": {
                          "$id": "#root/users/email",
                          "title": "Email",
                          "type": "string",
                          "default": "",
                          "examples": ["apaunsford0@php.net"],
                          "pattern": "^.*$"
                        },
                        "user_image": {
                          "$id": "#root/users/user_image",
                          "title": "User_image",
                          "type": "string",
                          "default": "",
                          "examples": [
                            "https://ui-avatars.com/api/?background=random&size=128&name=Alf+Paunsford"
                          ],
                          "pattern": "^.*$"
                        },
                        "interested_in": {
                          "$id": "#root/users/interested_in",
                          "title": "Interested_in",
                          "type": "array",
                          "default": [],
                          "items": {
                            "$id": "#root/users/interested_in/items",
                            "title": "Items",
                            "type": "string",
                            "default": "",
                            "examples": ["Associate Professor"],
                            "pattern": "^.*$"
                          }
                        },
                        "matches": {
                          "$id": "#root/users/matches",
                          "title": "Matches",
                          "type": "array",
                          "default": [],
                          "items": {
                            "$id": "#root/users/matches/items",
                            "title": "Items",
                            "type": "object",
                            "required": [
                              "role",
                              "opp_id",
                              "org_name",
                              "contact_email",
                              "user_interest",
                              "match_level"
                            ],
                            "properties": {
                              "role": {
                                "$id": "#root/users/matches/items/role",
                                "title": "Role",
                                "type": "string",
                                "default": "",
                                "examples": ["Professor"],
                                "pattern": "^.*$"
                              },
                              "opp_id": {
                                "$id": "#root/users/matches/items/opp_id",
                                "title": "Opp_id",
                                "type": "string",
                                "default": "",
                                "examples": [
                                  "4eb435e7-6e2f-443a-91ca-8ff17f714ec2"
                                ],
                                "pattern": "^.*$"
                              },
                              "org_name": {
                                "$id": "#root/users/matches/items/org_name",
                                "title": "Org_name",
                                "type": "string",
                                "default": "",
                                "examples": ["Devpulse"],
                                "pattern": "^.*$"
                              },
                              "contact_email": {
                                "$id": "#root/users/matches/items/contact_email",
                                "title": "Contact_email",
                                "type": "string",
                                "default": "",
                                "examples": ["mhacaudh@google.ca"],
                                "pattern": "^.*$"
                              },
                              "user_interest": {
                                "$id": "#root/users/matches/items/user_interest",
                                "title": "User_interest",
                                "type": "string",
                                "default": "",
                                "examples": ["Associate Professor"],
                                "pattern": "^.*$"
                              },
                              "match_level": {
                                "$id": "#root/users/matches/items/match_level",
                                "title": "Match_level",
                                "type": "integer",
                                "examples": [90],
                                "default": 0
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
